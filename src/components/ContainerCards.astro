---
import Card from "./Card.astro";
import RedirectLinkIcon from "./icons/RedirectLinkIcon.astro";
---

<style>
    section {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(360px, 300px));
        width: auto;
        align-items: center;
        justify-content: space-around;
        margin-inline: 2rem;
        
    }
</style>

